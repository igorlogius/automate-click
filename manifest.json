{
  "author": "igorlogius",
  "browser_action": {
    "browser_style": true,
    "default_title" : "Open AC Rules"
  },
  "background": {
	"scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content-script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "description": "Automate click actions on websites",
  "icons": {
    "128": "icon.png"
  },
  "manifest_version": 2,
  "name": "Automate Click",
  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "version": "1.10.6"
}
